@model WebApplication5.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .card h3 {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .card p, .card span {
            font-size: 1rem;
            color: #333;
        }

    .overview .card {
        text-align: center;
    }

    .last-transactions .d-flex {
        border-bottom: 1px solid #eee;
        padding: 10px 0;
    }

    .chart-container {
        width: 100%;
        height: 400px;
    }

    .invoice-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }
</style>
<div class="main-content">
    <div class="overview row">
        <div class="col-md-3">
            <div class="card">
                <h3>Customer name</h3>
                <p>@Model.Balance.ToString("C")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h3>Total balance</h3>
                <p>@Model.TotalBalance.ToString("C")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h3>Credit Line</h3>
                <p>@Model.TotalCredit.ToString("C")</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <h3>Total Saving</h3>
                <p>@Model.TotalSaving.ToString("C")</p>
            </div>
        </div>
    </div>

    <div class="last-transactions">
        <div class="card">
            <h3>Last Transactions</h3>
            <ul class="list-unstyled">
                @foreach (var transaction in Model.Transactions)
                {
                    <li>
                        <div class="d-flex justify-content-between">
                            <span>@transaction.Description</span>
                            <span>@transaction.Category</span>
                            <span>@transaction.Date</span>
                            <span>@transaction.Status</span>
                            <span>@transaction.Amount.ToString("C")</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="charts">
        <div class="card">
            <h3>Debit & Credit Overview</h3>
            <div class="chart-container">
                <canvas id="debitCreditChart"></canvas>
            </div>
        </div>
    </div>

    <div class="invoices-sent">
        <div class="card">
            <h3>Invoices Sent</h3>
            @foreach (var invoice in Model.Invoices)
            {
                <div class="invoice-item">
                    <span>@invoice.ClientName</span>
                    <span>@invoice.TimeAgo</span>
                    <span>@invoice.Amount.ToString("C")</span>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('debitCreditChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Sat', 'Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri'],
            datasets: [{
                label: 'Debit',
                data: [7560, 5420, 6840, 7410, 5920, 6240, 8390],
                backgroundColor: '#FFA500',
                borderColor: '#FFA500',
                borderWidth: 1
            }, {
                label: 'Credit',
                data: [5420, 6820, 7840, 5410, 7920, 7240, 8390],
                backgroundColor: '#4B0082',
                borderColor: '#4B0082',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
